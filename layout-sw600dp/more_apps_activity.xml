<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tasklist.tasklist.other_activitys.More_apps_Activity">

    <ImageView
        android:id="@+id/clickthetree_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clickthetree_text"
        app:srcCompat="@drawable/clickthetree_icon" />

    <TextView
        android:id="@+id/clickthetree_text"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="52dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="ClickTheTree app"
        app:fontFamily="@font/black_ops_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/comingsoon"
        android:layout_width="match_parent"
        android:layout_height="397dp"

        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clickthetree_image"
        app:layout_constraintVertical_bias="0.244"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/coming_soon" />


</androidx.constraintlayout.widget.ConstraintLayout>